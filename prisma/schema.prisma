generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                   String                @id @default(cuid())
  name                 String
  slug                 String
  description          String
  price                Int
  image                String
  categories           Category[]
  collections          Collection[]
  orderItems           OrderItem[]
  productSizeVariants  ProductSizeVariant[]
  productColorVariants ProductColorVariant[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Collection {
  id       String    @id @default(cuid())
  name     String
  slug     String
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id       String    @id @default(cuid())
  name     String
  slug     String
  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  orderId   String
}

model Order {
  id         String      @id @default(cuid())
  total      Int
  status     Status
  orderItems OrderItem[]
}

model ProductSizeVariant {
  id        String  @id @default(cuid())
  name      String
  slug      String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model ProductColorVariant {
  id        String  @id @default(cuid())
  name      String
  slug      String
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

enum Status {
  DRAFT
  PENDING
  COMPLETED
}
