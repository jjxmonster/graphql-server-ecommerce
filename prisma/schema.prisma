generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String       @id @default(cuid())
  name        String  
  slug        String
  description String
  price       Int
  image       String
  categories  Category[]
  collections Collection[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Collection {
  id          String       @id @default(cuid())
  name        String
  products    Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String       @id @default(cuid())
  name        String
  products    Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
